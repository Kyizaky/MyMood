<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app">

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:visibility="gone" />


    <!-- Legend Mood -->
    <androidx.cardview.widget.CardView
        android:id="@+id/container_legend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginVertical="30dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:weightSum="6">

            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mood1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Angry"
                android:textSize="16sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />

        </LinearLayout>

            <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/mood2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disgust"
                android:textSize="15sp"
                android:layout_marginTop="8dp"
                android:gravity="center" />
        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mood3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scary"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mood4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sad"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mood5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Happy"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/mood6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Neutral"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:gravity="center" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="135dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginBottom="20dp"
        android:clipToPadding="true"
        android:clipChildren="true">

        <LinearLayout
            android:id="@+id/container_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


            <!-- Pie Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginVertical="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <Spinner
                        android:id="@+id/spinner_month_pie"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/moodPieChart"
                            android:layout_width="0dp"
                            android:layout_height="250dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="16dp"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_view_mood_legend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            android:overScrollMode="never"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Line Chart -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baris untuk TextView dan dua Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- TextView untuk "Mood Trend" di kiri -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mood Trend"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <!-- Spacer untuk mendorong Button ke kanan -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- LinearLayout untuk dua Button (bulan dan tahun) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Button untuk memilih bulan -->
                            <Button
                                android:id="@+id/btn_month_trend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="Bulan"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:background="@android:drawable/btn_default" />

                            <!-- Button untuk memilih tahun -->
                            <Button
                                android:id="@+id/btn_year_trend"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tahun"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:background="@android:drawable/btn_default" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- LineChart untuk menampilkan tren mood -->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart_trend"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="16dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Grid mood -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                app:cardCornerRadius="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <GridLayout
                    android:id="@+id/moodCalendarGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    app:useDefaultMargins="false" />
            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ranking Activity -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baris untuk TextView dan dua Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- TextView untuk "Ranking Activity" di kiri -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ranking Activity"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <!-- Spacer untuk mendorong Button ke kanan -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- LinearLayout untuk dua Button (bulan dan tahun) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Button untuk memilih bulan -->
                            <Button
                                android:id="@+id/btn_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="Bulan"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:background="@android:drawable/btn_default" />

                            <!-- Button untuk memilih tahun -->
                            <Button
                                android:id="@+id/btn_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tahun"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:background="@android:drawable/btn_default" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- RecyclerView untuk menampilkan peringkat aktivitas -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_ranking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Ranking Feeling -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                app:cardCornerRadius="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Baris untuk TextView dan dua Button -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <!-- TextView untuk "Ranking Feeling" di kiri -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ranking Feeling"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black" />

                        <!-- Spacer untuk mendorong Button ke kanan -->
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <!-- LinearLayout untuk dua Button (bulan dan tahun) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <!-- Button untuk memilih bulan -->
                            <Button
                                android:id="@+id/btn_month_feeling"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="8dp"
                                android:text="Bulan"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:background="@android:drawable/btn_default" />

                            <!-- Button untuk memilih tahun -->
                            <Button
                                android:id="@+id/btn_year_feeling"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tahun"
                                android:textSize="14sp"
                                android:padding="8dp"
                                android:background="@android:drawable/btn_default" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- RecyclerView untuk menampilkan peringkat perasaan -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_view_feeling_ranking"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</FrameLayout>